{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@domain/entity/job": ["libs/domain/entity/job/src/index.ts"],
      "@domain/data-access-object": [
        "libs/domain/data-access-object/src/index.ts"
      ],
      "@application/service/command": [
        "libs/application/service/command/src/index.ts"
      ],
      "@presentation/ui/model": [
        "libs/presentation/ui/model/src/index.ts"
      ],
      "@presentation/ui/message": [
        "libs/presentation/ui/message/src/index.ts"
      ],
      "@presentation/ui/state": [
        "libs/presentation/ui/state/src/index.ts"
      ],
      "@presentation/ui/theme": [
        "libs/presentation/ui/theme/src/index.ts"
      ],
      "@presentation/ui/utils": [
        "libs/presentation/ui/utils/src/index.ts"
      ],
      "@presentation/ui/instruction": [
        "libs/presentation/ui/instruction/src/index.ts"
      ],
      "@presentation/ui/component": [
        "libs/presentation/ui/component/src/index.ts"
      ],
      "@infrastructure/data-access-object/job": [
        "libs/infrastructure/data-access-object/job/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
